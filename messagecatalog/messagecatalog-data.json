{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://cloudevents.io/schemas/messagecatalog.json",
  "root": {
    "type": "object",
    "properties": {
      "specversion": {
        "type": "string"
      },
      "groups": {
        "type": "object",
        "description" : "A table of message definition groups. The property names (keys) of this table are synonyms for the `id` properties in the value objects.",
        "additionalProperties": {
          "$ref": "#/MessageDefinitionGroup"
        }
      }
    }
  },
  "MessageDefinitionGroup": {   
    "type": "object",
    "properties": {
      "id": {
        "type": "string", 
        "description" : "Identifier of this message definition group. If "
      },
      "format": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "documentation": {
        "type": "string"
      },
      "tags": {
        "type": "string"
      },
      "createdtimeutc": {
        "type": "string",
        "format": "date-time"
      },
      "updatedtimeutc": {
        "type": "string",
        "format": "date-time"
      },
      "groupProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      },
      "definitions": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/MessageDefinition"
        }
      }
    }
  },
  "MessageDefinitionBase": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "authority": {
        "type": "string"
      },
      "format": {
        "type": "string",
        "format": "uri"
      },
      "description": {
        "type": "string"
      },
      "tags": {
        "type": "string"
      },
      "documentation": {
        "type": "string"
      },
      "relatedto": {
        "type": "string",
        "format": "uri"
      },
      "relatedvia": {
        "type": "string"
      },
      "relation": {
        "type": "string",
        "enum": [
          "reply",
          "followup",
          "end",
          "report"
        ]
      },
      "createdtimeutc": {
        "type": "string",
        "format": "date-time"
      },
      "updatedtimeutc": {
        "type": "string",
        "format": "date-time"
      }
    }
  },
  "MessageDefinition": {
    "allOf": [
      {
        "$ref": "#/MessageDefinitionBase"
      },
      {
        "type": "object",
        "schema": {
          "versions": {
            "$ref": "#/MessageDefinitionVersion"
          }
        }
      }
    ]
  },
  "MessageDefinitionVersion": {
    "allOf": [
      {
        "$ref": "#/MessageDefinitionBase"
      },
      {
        "type": "object",
        "schema": {
          "version": {
            "type": "string"
          },
          "definition": {
            "oneOf": [
              {
                "$ref": "#/CloudEventsMetaschema"
              },
              {
                "$ref": "#/AMQPMetaschema"
              },
              {
                "$ref": "#/MQTTMetaschema"
              },
              {
                "$ref": "#/NATSMetaschema"
              },
              {
                "type": "object",
                "description": "Allows for any other Metaschema object"
              }
            ]
          }
        }
      }
    ]
  },
  "AttributeValueTemplate": {
    "type": "object",
    "properties": {
      "description": {
        "type": "string"
      },
      "required": {
        "type": "boolean",
        "default": false
      }
    }
  },
  "StringAttributeValueTemplate": {
    "allOf": [
      {
        "$ref": "#/AttributeValueTemplate"
      },
      {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          }
        }
      }
    ]
  },
  "TimestampAttributeValueTemplate": {
    "allOf": [
      {
        "$ref": "#/AttributeValueTemplate"
      },
      {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          }
        }
      }
    ]
  },
  "IntegerAttributeValueTemplate": {
    "allOf": [
      {
        "$ref": "#/AttributeValueTemplate"
      },
      {
        "type": "object",
        "properties": {
          "value": {
            "type": "number"
          }
        }
      }
    ]
  },
  "BooleanAttributeValueTemplate": {
    "allOf": [
      {
        "$ref": "#/AttributeValueTemplate"
      },
      {
        "type": "object",
        "properties": {
          "value": {
            "type": "boolean"
          }
        }
      }
    ]
  },
  "UriReferenceAttributeValueTemplate": {
    "allOf": [
      {
        "$ref": "#/AttributeValueTemplate"
      },
      {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          }
        }
      }
    ]
  },
  "UriAttributeValueTemplate": {
    "allOf": [
      {
        "$ref": "#/AttributeValueTemplate"
      },
      {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    ]
  },
  "DataSchemaAttributeValueTemplate": {
    "allOf": [
      {
        "$ref": "#/AttributeValueTemplate"
      },
      {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    ]
  },
  "AnyAttributeValueTemplate": {
    "oneOf": [
      {
        "$ref": "#/StringAttributeValueTemplate"
      },
      {
        "$ref": "#/BooleanAttributeValueTemplate"
      },
      {
        "$ref": "#/IntegerAttributeValueTemplate"
      },
      {
        "$ref": "#/TimestampAttributeValueTemplate"
      },
      {
        "$ref": "#/UriAttributeValueTemplate"
      },
      {
        "$ref": "#/UriReferenceAttributeValueTemplate"
      }
    ]
  },
  "CloudEventsMetaschema": {
    "type": "object",
    "properties": {
      "attributes": {
        "type": "object",
        "properties": {
          "specversion": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "id": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "source": {
            "$ref": "#/UriReferenceAttributeValueTemplate"
          },
          "subject": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "type": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "datacontenttype": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "dataschema": {
            "$ref": "#/DataSchemaAttributeValueTemplate"
          },
          "time": {
            "$ref": "#/TimestampAttributeValueTemplate"
          }
        },
        "required": [
          "type"
        ]
      }
    }
  },
  "AMQPMetaschema": {
    "type": "object",
    "properties": {
      "header": {
        "type": "object",
        "properties": {
          "durable": {
            "$ref": "#/BooleanAttributeValueTemplate"
          },
          "priority": {
            "$ref": "#/IntegerAttributeValueTemplate"
          },
          "ttl": {
            "$ref": "#/IntegerAttributeValueTemplate"
          }
        }
      },
      "deliveryannotations": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/AnyAttributeValueTemplate"
        }
      },
      "messageannotations": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/AnyAttributeValueTemplate"
        }
      },
      "properties": {
        "type": "object",
        "properties": {
          "messageid": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "userid": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "to": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "subject": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "replyto": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "correlationid": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "contenttype": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "contentencoding": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "absoluteexpirytime": {
            "$ref": "#/TimestampAttributeValueTemplate"
          },
          "creationtime": {
            "$ref": "#/TimestampAttributeValueTemplate"
          },
          "groupid": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "groupsequence": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "replytogroupid": {
            "$ref": "#/StringAttributeValueTemplate"
          }
        }
      },
      "applicationdata": {
        "type": "object",
        "properties": {
          "dataschema": {
            "$ref": "#/DataSchemaAttributeValueTemplate",
            "description": "reference to a schema object"
          },
          "amqpencoding": {
            "type": "string",
            "enum": [
              "Data",
              "Value",
              "Sequence"
            ]
          }
        }
      },
      "applicationproperties": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/AnyAttributeValueTemplate"
        }
      },
      "footer": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/AnyAttributeValueTemplate"
        }
      }
    }
  },
  "MQTTMetaschema": {
    "type": "object",
    "properties": {
      "publish": {
        "type": "object",
        "properties": {
          "mqttversion": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "qos": {
            "$ref": "#/IntegerAttributeValueTemplate"
          },
          "retain": {
            "$ref": "#/BooleanAttributeValueTemplate"
          },
          "topicname": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "payloadformat": {
            "$ref": "#/IntegerAttributeValueTemplate"
          },
          "expiryinterval": {
            "$ref": "#/IntegerAttributeValueTemplate"
          },
          "responsetopic": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "correlationdata": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "contenttype": {
            "$ref": "#/StringAttributeValueTemplate"
          }
        }
      },
      "userproperty": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/AnyAttributeValueTemplate"
        }
      },
      "payload": {
        "type": "object",
        "properties": {
          "dataschema": {
            "$ref": "#/DataSchemaAttributeValueTemplate",
            "description": "reference to a schema object"
          }
        }
      }
    }
  },
  "NATSMetaschema": {
    "type": "object",
    "properties": {
      "pub": {
        "type": "object",
        "properties": {
          "subject": {
            "$ref": "#/StringAttributeValueTemplate"
          },
          "replyto": {
            "$ref": "#/StringAttributeValueTemplate"
          }
        }
      },
      "payload": {
        "type": "object",
        "properties": {
          "dataschema": {
            "$ref": "#/DataSchemaAttributeValueTemplate",
            "description": "reference to a schema object"
          }
        }
      }
    }
  }
}